// Basic Prisma schema for local development (PostgreSQL)
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  passwordHash   String
  name           String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  refreshTokens  RefreshToken[]
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  tokenHash  String
  expiresAt  DateTime
  revoked    Boolean  @default(false)
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  createdAt  DateTime @default(now())
  @@index([userId])
}
