{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma": "prisma",
    "lint": "eslint './**/*.{ts,tsx,js,jsx}' --ext .ts,.tsx,.js,.jsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest --run",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "prisma": "^7.1.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
